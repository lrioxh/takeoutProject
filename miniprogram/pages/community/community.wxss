/* pages/community/community.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
}

.post {
  margin: 70rpx 0 0 0;
}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 32rpx 32rpx;
  margin: 0 auto;
}

.container-line {
  width: 100%;
  height: 2px;
  background-color: #ccc;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.user-head {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.user-name-time {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.user-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.user-publish-time {
  font-size: 30rpx;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 5%;
  margin-top: 28rpx;
}

.content-scroll {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.content-text {
  font-size: 36rpx;
  color: #666;
  margin-left: 20rpx;
}

.content-img {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #999;
}

.search {
  width: 100%;
  height: 70rpx;
  padding: 12.5rpx 0 12.5rpx 0;
  background: #ff893b;
  text-align: center;
}

.search .search-right image {
  width: 80rpx;
  height: 50rpx;
  padding: 10rpx;
}

.userinfo-avatar {
  flex: 1;
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 0 20rpx;
}

.flex-item {
  /* margin: auto; */
  color: #eee;
  font-weight: 600;
  line-height: 70rpx;
}

.hover-class-style {
  opacity: 0.8;
}

.add_icon {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  bottom: 150rpx;
  right: 50rpx;
}

.mine {
  z-index: 99;
  float: right;
  background-color: #ccc;
  margin: 15rpx 0 0 0;
  position: fixed;
  right: 1rpx;
}

.mine .selection {
  margin: 4rpx;
  background-color: #eee;
  padding: 25rpx;
}

.mine .selection image {
  height: 40rpx;
  width: 40rpx;
}

.mine .selection text {
  margin: auto;
}
