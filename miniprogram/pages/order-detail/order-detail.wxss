.logistics {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999999999;
  background: rgba(0, 0, 0, 0.2);
}

.Block {
  position: absolute;
  top: 100rpx;
  left: 0;
  background: #eee;
  width: 92%;
  margin-left: 4%;
  border-radius: 24rpx;
}

.orderTitle {
  text-align: center;
  padding: 40rpx;
  border-bottom: 2rpx solid #ddd;
}

.detailList {
  display: flex;
  justify-content: space-between;
  padding: 40rpx;
  position: relative;
  padding-right: 80rpx;
}

.fistList {
  padding-top: 80rpx;
}

.detailList:before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #ddd;
  border-radius: 50%;
  position: relative;
  top: 14rpx;
  left: 76rpx;
  z-index: 9;
}

.borderLeft {
  height: 120rpx;
  width: 2rpx;
  background: #666;
  position: absolute;
  left: 124rpx;
  top: 64rpx;
}

.detailList:before:first-of-type {
  width: 0;
}

.ordorDetail:last-of-type .borderLeft {
  height: 0;
}

.ordorDetail:first-of-type .detailList:before {
  content: '';
  width: 0;
  height: 0;
}

.ordorDetail .iconfont {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  top: 38rpx;
  color: #ffe400;
  left: 104rpx;
  z-index: 9;
}

