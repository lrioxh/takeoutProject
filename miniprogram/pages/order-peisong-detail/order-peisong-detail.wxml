<!--pages/order-peisong-detail/order-peisong-detail.wxml-->
<view class="view-total">
  <!-- <view class="view-order"> -->
    <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude=" {{latitude}}" 
    show-compass="{{true}}"
    markers="{{markers}}"
    scale="13" 
    show-location="{{true}}"
    enable-rotate	="{{true}}"
    bindcallouttap="{{true}}"
    enable-3D="{{true}}"
    style="width: 100%; height: 450rpx;border:1px solid black;"></map>
    <!-- <map style="width:100%;height450rpx;border:1px solid black;"></map> -->
  <!-- </view> -->
  <view class="view-status-location">
        <view class="view-order-poccess-detail">
          <image style="width:40rpx;height:40rpx;margin-right:15rpx;" src="../../imgs/img2/Ar.png"></image>
          <view style="margin-right:15rpx;">预计{{time}}</view>
          <view>外卖送达学{{}}外卖柜，请注意消息</view>
        </view>
  </view>
  <view class="view-status">
    <view class="view-time">预计 <text>{{time}}</text> 到达</view>
    <view class="view-order-config">
      <view bindtap="logfsdf">取消订单</view>
      <!-- <view>立即支付</view> -->
      <view>修改地址等信息</view>
    </view>
  </view>
  <!-- <view class="view-order-detail"> -->
    <view class="view-dish-list">
        <view class="view-dish-word">商家 ></view>
        <!-- dish-datail -->
        <block wx:for="{{orders.dishID}}" wx:key="{{}}">
          <view class="view-dish-detail">
            <image class="image-dish" src="../../imgs/food.jpg"></image>
            <view>
              <view class="view-dish-value">
                <text>描述：{{orders.dishID[index]}}</text>
                <text><text style="font-weight:600;font-size:36rpx">￥</text>{{orders.price[index]}}</text>
              </view>
            <view class="view-dish-num">x{{orders.dishnum[index]}}</view>
            </view> 
          </view>
        </block>
    </view>
    <view class="view-wrap">
      <view class="view-wrap-detail">
        <text>包装费</text>
        <text>￥{{}}</text>
      </view>
      <view class="view-wrap-detail">
        <text>配送费</text>
        <text>￥{{}}</text>
      </view>
      <view class="view-wrap-detail">
        <text bindtap="youhui">优惠></text>
        <text>-￥{{}}</text>
      </view>
    </view>
    <!-- 分割线 -->
    <view class="viewline"></view>
    <!-- 合计 -->
    <view class="view-value-total">
      <view>
        <text>已优惠</text>
        <text>￥</text>
      </view>
      <view>小计￥</view>
    </view>
  <!-- </view> -->
</view>
