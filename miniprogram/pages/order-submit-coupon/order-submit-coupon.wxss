.container {
  display: flex;
  flex-direction: column;
  height: auto;
  color: #465461;
}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 16px 16px;
  margin: 0 auto;
}

.store {
  display: flex;
  /* flex-direction: row; */
  background-color: #ecf3f4;
  margin: 15rpx;
  padding: 10rpx;
  border: #ccc 2rpx solid;
  border-radius: 20rpx;
}

.store-info {
  display: flex;
  /* flex-direction: column; */
  width: 80%;
  margin-top: 5px;
  margin-left: 10px;
}

.coupon-info {
  flex-direction: column;
}

.store-name {
  font-size: 18px;
  color: #333;
  font-weight: bold;
  margin: auto;
  margin-left: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 10%;
  margin-top: 14px;
}

.store-content {
  display: flex;
  flex-direction: column;
  height: auto;
  width: 95%;
}

.store-img {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
}

