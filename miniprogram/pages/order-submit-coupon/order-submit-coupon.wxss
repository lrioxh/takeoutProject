.store-rate {
  font-size: 32rpx;
  margin: 23rpx 0 10rpx 25rpx;
}

.right {
  font-size: 90rpx;
  color: red;
}

.yuan {
  width: 50rpx;
  height: 70rpx;
}

.able {
  background-color: #ff893b;
  color: #fff;
}

button {
  width: 200rpx;
  margin: 0 15rpx 15rpx 0;
}

