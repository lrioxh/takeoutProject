<!--pages/unpaid-detail/unpaid-detail.wxml-->
<view>
  <view class="title">待付款</view>
  <view class="view-top-btn">
    <view><text>到店自取</text></view>
    <view><text>外卖配送</text></view>
  </view>
<!-- 自取 -->
  <scroll-view>
    <view class="view-dish">
      <!-- dish list -->
      <view class="view-dish-list">
        <view>商家 ></view>
        <!-- dish-datail -->
        <block wx:for="{{orderlist}}">
          <view class="view-dish-detail">
            <image class="image-dish" src="../../img/food.jpg"></image>
            <view>
              <view class="view-dish-value">
                <text>描述：{{item.name}}</text>
                <text><text style="font-weight:600;font-size:36rpx">￥</text>{{item.price}}</text>
              </view>
            <view class="view-dish-num">x{{item.number}}</view>
            </view> 
          </view>
        </block>
      </view>
      <!-- 包装费 -->
      <view class="view-wrap">
        <view class="view-wrap-detail">
          <text>包装费</text>
          <text>￥{{}}</text>
        </view>
        <view class="view-wrap-detail">
          <text>配送费</text>
          <text>￥{{}}</text>
        </view>
        <view class="view-wrap-detail">
          <text>优惠></text>
          <text>-￥{{}}</text>
        </view>
      </view>
      <!-- 分割线 -->
      <view class="viewline"></view>
      <!-- 合计 -->
      <view class="view-total">
        <view>
          <text>已优惠</text>
          <text>￥</text>
        </view>
        <view>小计￥</view>
      </view>
    </view>
  </scroll-view>
  <!-- 付款栏 -->
  <view class="view-payment">
    <!-- 应付价格，已优惠价格 -->
    <view>
      <view>￥{{}}</view>
      <view>已优惠￥{{}}</view>
    </view>

    <view class="view-kindofpay">
      <!-- 找人付按钮 -->
      <view class="view-friendpay"><text>朋友代付</text></view>
      <!-- 提交订单（付款） -->
      <view class="view-submit"><text>提交订单</text></view>
    </view>
  </view>


</view>
