/* pages/order/order.wxss */
 .swiper-tab{  
    width: 100%;  
    margin-top: 8vh;
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;
    background:#f2656d;
}

.order_scroll{
  height: 79vh;
}

.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 33.33%;
  font-weight: bold;  
}

.on{ 
  color:white;  
  border-bottom: 5rpx solid #48577f;
}  
  
.swiper-box{ 
  display: block; 
  width: 100%; 
  overflow: hidden; 
}  

.order_container{
  background: white;
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  border: 2px dashed #f2656d
}

.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
 margin-top: 20rpx;
 margin-bottom: 20rpx;
}

.order_label{
  color: #666;
}


.list{
  margin-left: 100rpx;
  font-weight: bold;
}

.num{
  color: #FF893B;
}

.total{
  font-weight: bold;
  font-size: 35rpx;
}

.rmb{
  font-size: 30rpx;
}

.button{
  display: flex;
  margin-top: 20rpx;
}

.cancel{
  background: #FF893B;
  color: white;
}

.take{
  background: #f2656d;
  color:white;
}

.cancel_title{
  color: red;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-size: 40rpx;
}